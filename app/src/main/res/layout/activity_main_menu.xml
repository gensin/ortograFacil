<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <Button
        android:id="@+id/main_menu_button_1"
        style="@style/main_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/main_menu_button_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_menu_button_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        style="@style/main_menu_button"
        android:text="@string/main_menu_button_2"
        app:layout_constraintBottom_toTopOf="@+id/main_menu_button_1"
        app:layout_constraintEnd_toEndOf="@+id/main_menu_button_1"
        app:layout_constraintStart_toStartOf="@+id/main_menu_button_1" />

    <Button
        android:id="@+id/main_menu_button_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/main_menu_button"
        android:text="@string/main_menu_button_3"
        app:layout_constraintEnd_toEndOf="@+id/main_menu_button_1"
        app:layout_constraintStart_toStartOf="@+id/main_menu_button_1"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_button_1" />
</android.support.constraint.ConstraintLayout>